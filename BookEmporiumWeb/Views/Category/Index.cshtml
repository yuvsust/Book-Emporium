@using BookEmporium.Models
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Create New Category
            </a>
        </div>
    </div>
    <br />
    <br />

</div>

<table class="table table-bordered table-stripped table-hover" style="width:100%">
    <thead>
        <tr class="table-primary">
            <th>Category Name</th>
            <th>Display Order</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width=50%>@obj.Name</td>
                <td width=30%>@obj.DisplayOrder</td>
                <td style="border: 0px; text-align: center;">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary"> 
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </td>
                <td style="border-left: 0px; text-align: center;">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger"> 
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>